<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">


    <!--中间内容布局-->
    <FrameLayout
        android:id="@+id/main_rl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/main_tab_height"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/main_tab_height"
        android:background="@mipmap/main_ic_bottom_line" />

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/main_ctl_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_tab_height"
        android:layout_gravity="bottom"
        android:background="@color/color_bg_bottom"
        app:tl_iconHeight="@dimen/main_tab_icon_size_height"
        app:tl_iconWidth="@dimen/main_tab_icon_size_width"
        app:tl_indicator_height="0dp"
        app:tl_textSelectColor="@color/colorTextPrimaryNext"
        app:tl_textUnselectColor="@color/colorTextTertiary"
        app:tl_textsize="@dimen/main_tab_txt_size"
        app:tl_underline_color="#e6e6e6"
        app:tl_underline_gravity="TOP"
        app:tl_underline_height="0dp" />
</FrameLayout>