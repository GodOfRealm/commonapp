<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >

    <Chronometer
        android:id="@+id/recorder_chr_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-9dp"
        android:format="00:00"
        android:textColor="@color/colorTextPrimary"
        android:textSize="@dimen/text_size_display2"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/recorder_tv_max_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorTextSecondary"
        android:textSize="17sp"
        tools:text="录制时长为5-15秒"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/recorder_iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/recorder_ic_delete_normal"
            android:visibility="invisible"
            />

        <FrameLayout
            android:id="@+id/recorder_fl_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            >

            <com.github.lzyzsd.circleprogress.DonutProgress
                android:id="@+id/recorder_donut_progress"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:rotation="270"
                app:donut_finished_color="@color/colorPrimary"
                app:donut_finished_stroke_width="4dp"
                app:donut_max="15"
                app:donut_text_color="#00000000"
                app:donut_unfinished_color="@color/colorDisable"
                app:donut_unfinished_stroke_width="4dp"
                />

            <ImageView
                android:id="@+id/recorder_iv_button"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@mipmap/recorder_ic_start"
                />

        </FrameLayout>

        <ImageView
            android:id="@+id/recorder_iv_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/recorder_ic_complete_normal"
            android:visibility="invisible"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/recorder_tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-2dp"
        android:layout_marginTop="@dimen/spacing_normal"
        android:text="点击开始录音"
        android:textColor="@color/colorTextPrimary"
        android:textSize="@dimen/text_size_body"
        />

</merge>