<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="91dp">

    <ImageView
        android:id="@+id/repayment_recyele_select_bank_iv_icon"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/home_ic_notice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/repayment_recyele_select_bank_Tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9.5dp"
        android:text="工商银行"
        android:textColor="@color/colorTextPrimary"
        android:textSize="@dimen/text_size_body"
        app:layout_constraintEnd_toEndOf="@+id/repayment_recyele_select_bank_iv_icon"
        app:layout_constraintStart_toStartOf="@+id/repayment_recyele_select_bank_iv_icon"
        app:layout_constraintTop_toBottomOf="@+id/repayment_recyele_select_bank_iv_icon" />
</android.support.constraint.ConstraintLayout>