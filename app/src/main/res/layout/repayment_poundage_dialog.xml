<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="@dimen/dialog_width"
        android:layout_height="236dp"
        android:background="@drawable/common_bg_dialog"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/repayment_poundage_dialog_tv_number_charge_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="次数费"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/text_size_body"
            app:layout_constraintEnd_toStartOf="@+id/repayment_poundage_dialog_tv_number_charge"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/repayment_poundage_dialog_tv_number_charge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1元"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/text_size_body"
            app:layout_constraintEnd_toStartOf="@+id/repayment_poundage_dialog_tv_number_charge_unit"
            app:layout_constraintStart_toEndOf="@+id/repayment_poundage_dialog_tv_number_charge_title"
            app:layout_constraintTop_toTopOf="@+id/repayment_poundage_dialog_tv_number_charge_title" />

        <TextView
            android:id="@+id/repayment_poundage_dialog_tv_number_charge_unit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1元/次"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/repayment_poundage_dialog_tv_number_charge"
            app:layout_constraintTop_toTopOf="@+id/repayment_poundage_dialog_tv_number_charge_title" />

        <TextView
            android:id="@+id/repayment_poundage_dialog_tv_repayment_charge_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:text="还款手续费"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/text_size_body"
            app:layout_constraintEnd_toStartOf="@+id/repayment_poundage_dialog_tv_repayment_charge"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/repayment_poundage_dialog_tv_number_charge_title" />

        <TextView
            android:id="@+id/repayment_poundage_dialog_tv_repayment_charge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="3.75元"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/text_size_body"
            app:layout_constraintEnd_toStartOf="@+id/repayment_poundage_dialog_tv_repayment_charge_unit"
            app:layout_constraintStart_toEndOf="@+id/repayment_poundage_dialog_tv_repayment_charge_title"
            app:layout_constraintTop_toTopOf="@+id/repayment_poundage_dialog_tv_repayment_charge_title" />

        <TextView
            android:id="@+id/repayment_poundage_dialog_tv_repayment_charge_unit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="75.00元/万元"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/repayment_poundage_dialog_tv_repayment_charge"
            app:layout_constraintTop_toTopOf="@+id/repayment_poundage_dialog_tv_repayment_charge_title" />

        <TextView
            android:id="@+id/repayment_poundage_dialog_tv_repayment_charge_total_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:text="手续费总计"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_body"
            app:layout_constraintStart_toStartOf="@+id/repayment_poundage_dialog_tv_repayment_charge_title"
            app:layout_constraintTop_toBottomOf="@+id/repayment_poundage_dialog_tv_repayment_charge_title" />

        <TextView
            android:id="@+id/repayment_poundage_dialog_tv_repayment_charge_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="4.75元"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_body"
            app:layout_constraintStart_toStartOf="@+id/repayment_poundage_dialog_tv_repayment_charge"
            app:layout_constraintTop_toTopOf="@+id/repayment_poundage_dialog_tv_repayment_charge_total_title"></TextView>

        <TextView
            style="@style/CommonClickAbleStyle"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="32dp"
            android:text="我知道了"
            app:layout_constraintBottom_toBottomOf="parent" />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>