<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">


    <TextView
        android:id="@+id/repayment_foot_tv_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/repayment_guide"
        android:textColor="@color/colorTextPrimary"
        android:textSize="@dimen/text_size_body"
        app:layout_constraintBottom_toBottomOf="@+id/repayment_foot_line"
        app:layout_constraintEnd_toStartOf="@id/repayment_foot_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/repayment_foot_line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3.5dp"
        android:text="@string/repayment_step"
        android:textColor="@color/colorTextTertiary"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintStart_toStartOf="@+id/repayment_foot_tv_guide"
        app:layout_constraintTop_toBottomOf="@+id/repayment_foot_tv_guide" />

    <ImageView
        android:id="@+id/repayment_foot_iv_guide_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="11dp"
        android:src="@mipmap/home_ic_notice"
        app:layout_constraintBottom_toBottomOf="@+id/repayment_foot_tv_guide"
        app:layout_constraintEnd_toStartOf="@+id/repayment_foot_tv_guide"
        app:layout_constraintTop_toTopOf="@+id/repayment_foot_tv_guide" />

    <View
        android:id="@+id/repayment_foot_line"
        style="@style/VerticalLineStyle"
        app:layout_constraintEnd_toStartOf="@+id/repayment_foot_tv_help"
        app:layout_constraintStart_toEndOf="@+id/repayment_foot_tv_guide"
        app:layout_constraintTop_toTopOf="parent"></View>

    <TextView
        android:id="@+id/repayment_foot_tv_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/repayment_help"
        android:textColor="@color/colorTextPrimary"
        android:textSize="@dimen/text_size_body"
        app:layout_constraintBottom_toBottomOf="@+id/repayment_foot_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/repayment_foot_line"
        app:layout_constraintTop_toTopOf="@+id/repayment_foot_line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3.5dp"
        android:text="@string/repayment_information"
        android:textColor="@color/colorTextTertiary"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintStart_toStartOf="@+id/repayment_foot_tv_help"
        app:layout_constraintTop_toBottomOf="@+id/repayment_foot_tv_help" />

    <ImageView
        android:id="@+id/repayment_foot_iv_help_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="11dp"
        android:src="@mipmap/home_ic_notice"
        app:layout_constraintBottom_toBottomOf="@+id/repayment_foot_tv_help"
        app:layout_constraintEnd_toStartOf="@+id/repayment_foot_tv_help"
        app:layout_constraintTop_toTopOf="@+id/repayment_foot_tv_help" />
</android.support.constraint.ConstraintLayout>